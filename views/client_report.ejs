<div class="inner-image"></div>
</div>
<div class="main-container">
    <div class="inner-main">
        <h3 id="heading-center">Clinet Reports</h3>
      <% docs.forEach(docs => {%>
        <div class="pic-card">
            <img src="/Client_images/<%= docs.image%>" alt="<%= docs.first_name%>">
            <h4>Name : <%= docs.first_name%> <%= docs.last_name%></h4>
            <h4> Weight : <%= docs.weight%> Kg</h4>
            <h4>Joinig Date : <%= docs.Date_of_creation%></h4>
        </div>
        <% }); %>
       

    </div>
</div>
</div>

<style>
    #heading-center{
        margin-bottom: 0px !important;
    }
    img{
        height: 230px;
        width: 200px;
        border: 5px solid #000;
        border-radius: 5px;
    }
    .pic-card{
        height: 250px;
        width: 100%;
        display: table-cell;
        padding: 74px;
    }
</style>

