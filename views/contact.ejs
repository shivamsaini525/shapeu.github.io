    align-items: center;
}

.contact-info{
    width: 100%;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
}

.card{
    transform: translateY(-250px);
    position: relative;
    flex: 1;
    max-width: 300px;
    height: 140px;
    background-color: #444;
