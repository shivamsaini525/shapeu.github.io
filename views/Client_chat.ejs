        font-family: monospace;
    }
    #type{
        position: fixed;
        width: 100%;
        bottom: 0;
    }
    #msg{
    padding: 20px 24px;
    background: aliceblue;
    width: 600px;
    border: none;
    border-left: 10px solid #00bcd4;
    }
    button{
        position: absolute;
        padding: 16px 50px;
        border: none;
        background:#000;
        color : #fff;
