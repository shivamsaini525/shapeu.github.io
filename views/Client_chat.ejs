<% include ./partials/Dash_navBar %>
<% include ./partials/messages %>

<div class="dash-wraper">
<div class="side-nav">
    <ul id="ul">
        <a href="/emp/dashboard"><li id="li"><i class="fas fa-home"></i> Home</li></a>
        <a href="/emp/requests"><li id="li"><i class="fas fa-notes-medical"></i> Client Request</li></a>
        <a href="/emp/write-blog"><li id="li" ><i class="fas fa-pen"></i> Write Blogs</li></a>
        <a href="/emp/chat"><li id="li" class="focus"><i class="fas fa-comment-dots"></i> Chat</li></a>
        <a href="/emp/salary"><li id="li"><i class="fas fa-rupee-sign"></i> Wallet</li></a>
        <a href="/emp/reports"><li id="li"><i class="far fa-clipboard"></i> Reports</li></a>
        <a href="/emp/pre-client"><li id="li"><i class="fas fa-crown"></i> Clients</li></a>
        <a href="/logout"><li id="li"><i class="fas fa-power-off"></i> Logout</li></a>
    </ul>
<!-- <div class="inner-image"></div> -->
</div>
<div class="main-container">
    <h3 id="heading-center">It can Take Sometime for Reply Please Wait....</h3>
   <div class="inner-chat">
         <!-- for sender -->
       <% for(var i=0; i < sender.length; i++) {%>
        <p style="margin-left: 10px;" id="msg-sender"><%= sender[i].message %> 
         <i style="font-size: .8rem;color: rgb(145, 143, 143);">---------<%= sender[i].when%></i>
         <br><span>From <%= sender[i].from%></span></p>
        <% } %>
        <% for(var i=0; i < msg.length; i++) {%>
            <p style="margin-left: 10px; margin-top: 5px;" id="msg"><%= msg[i].message %> 
             <i style="font-size: .8rem;color: rgb(145, 143, 143);">---------<%= msg[i].when%></i>
             <br><span>From <%= user.first_name%></span></p>
            <% } %>
        <form action="/emp/chat" method="post" id="type">
            <input type="text" name="message" id="message" placeholder="Message..." value="<%= typeof message != 'undefined' ? message : '' %>">
            <button type="submit" id="btn-send">Send</button>
        </form>
   </div>
</div>
</div>
</div>


